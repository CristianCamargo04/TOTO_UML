<%- include ('partials/header')%>

<div class="container">
    <table class="table table-hover table-bordered"">
      <h2>Actulizando Atributo</h2>
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre Tipo</th>
        </tr>
      </thead>
      <tbody>
        <% if(data) {%>
          <%data.map(item => {%>
              <tr>
                  <td><%=item.id%></td>
                  <td>
                    <form action="/updateAtributo/<%=item.id%>" method="POST">
                      <input type="text" placeholder="<%=item.nombre%>" name="nombre">
                      <select name="id_tipo">
                        <% if(tipos) {%>
                            <%tipos.map(item => {%>
                                <option value="<%=item.id%>"><%=item.nombre%></option>
                            <%})%>
                          <%}%>
                      </select>
                      <button type="submit" class="btn btn-primary">Actualizar</button>
                    </form>
                  </td>
              </tr>
          <%})%>
      <%}%>
      </tbody>
    </table>
  </div>

<%- include ('partials/footer')%>