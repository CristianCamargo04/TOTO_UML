<%- include ('partials/header')%>

<br>

<div class="container">
    <form class="form-inline" action="/addDiagrama" method="POST">
        <div class="form-group mb-2">
          <label for="label1" class="sr-only"></label>
          <input type="text" readonly class="form-control-plaintext" id="label1" value="Crea un diagrama">
        </div>
        <div class="form-group mx-sm-3 mb-2">
          <label for="label1" class="sr-only"></label>
          <input type="text" class="form-control" id="label2" name="nombre"placeholder="Nombre">
        </div>
        
        <button type="submit" class="btn btn-primary mb-2 "><span class="material-icons">addchart</span></button>
      </form>
</div>

<div class="container">
  <table class="table table-hover table-bordered"">
    <h2>Diagramas</h2>
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if(data) {%>
        <%data.map(item => {%>
            <tr>
                <td><%=item.id%></td>
                <td><%=item.nombre%></td>
                <td>
                  <a href="/deleteDiagrama/<%=item.id%>" class="btn btn-danger">Delete</a>
                  <a href="/updateDiagrama/<%=item.id%>" class="btn btn-warning ml-1">Edit</a>
                  <a href="clase/<%=item.id%>" class="btn btn-success ml-1">Dise√±ar</a>
                </td>
            </tr>
        <%})%>
    <%}%>
    </tbody>
  </table>
</div>

<%- include ('partials/footer')%>


