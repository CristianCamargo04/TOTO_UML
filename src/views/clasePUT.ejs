<%- include ('partials/header')%>

<div class="container">
  <table class="table table-hover table-bordered"">
    <h2>Actulizando Clase</h2>
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
      </tr>
    </thead>
    <tbody>
      <% if(data) {%>
        <%data.map(item => {%>
            <tr>
                <td><%=item.id%></td>
                <td>
                  <form action="/updateClase/<%=item.id%>" method="POST">
                    <input type="text" placeholder="<%=item.nombre%>" name="nombre">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                  </form>
                </td>
            </tr>
        <%})%>
    <%}%>
    </tbody>
  </table>
</div>

<%- include ('partials/footer')%>