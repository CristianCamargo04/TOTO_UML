<%- include ('partials/header')%>

<br>

<div class="container">
    <form class="form-inline" action="/addAtributo" method="POST">

        <div class="form-group mb-2">
          <label for="label1" class="sr-only"></label>
          <input type="text" readonly class="form-control-plaintext" id="label1" value="Crea una atributo">
        </div>

        <div class="form-group mx-sm-3 mb-2">
          <label for="label1" class="sr-only"></label>
          <input type="text" class="form-control" id="label2" name="nombre"placeholder="Nombre">
        </div>

        <div class="form-group mb-2">
          <select class="form-control" name="id_clase">
            <% if(clases) {%>
              <%clases.map(item => {%>
                  <option value="<%=item.id%>"><%=item.nombre%></option>
              <%})%>
            <%}%>
          </select>

          <div class="form-group ml-4">
            <select class="form-control" name="id_tipo">
              <% if(tipos) {%>
                <%tipos.map(item => {%>
                    <option value="<%=item.id%>"><%=item.nombre%></option>
                <%})%>
              <%}%>
            </select>
          </div>

        </div>
  
        <div class="form-group mb-2">
          <button type="submit" class="btn btn-primary ml-3"><span class="material-icons">addchart</span></button>
        </div>

        <div class="form-group mb-2">
          <a type="submit" class="btn btn-primary ml-3" href="/clase/<%=ruta%>"><span class="material-icons">arrow_back</span></a>
        </div>
        
      </form>
</div>

<div class="container">
  <table class="table table-hover table-bordered"">
    <h2>Atributos </h2>
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Clase</th>
        <th scope="col">Tipo</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if(atributos) {%>
        <%atributos.map(item => {%>
            <tr>
                <td><%=item.id%></td>
                <td><%=item.nombre%></td>
                <td><%=item.clase%></td>
                <td><%=item.tipo%></td>
                <td>
                  <a href="/deleteAtributo/<%=item.id%>" class="btn btn-danger">Delete</a>
                  <a href="/updateAtributo/<%=item.id%>" class="btn btn-warning ml-1">Edit</a>
                </td>
            </tr>
        <%})%>
    <%}%>
    </tbody>
  </table>
</div>

<%- include ('partials/footer')%>